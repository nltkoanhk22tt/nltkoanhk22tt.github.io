<main>
	<%- include('../partials/studentSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white p-3">
			<h5 class="m-0 fw-bold color-theme">Hoạt động</h5>
		</div>
		
		
		<div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
			<table class="table table-info table-striped table-hover m-0 bg-white">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Danh mục</th>
						<th scope="col">Hoạt động</th>
						<th scope="col">Thời gian hoạt động</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i<activities.length; i++) { %>
						<tr>
							
							<% if(activities[i].category == "issue") { %>
								<th scope="row"> <%= i+1 %> </th>
								<td> Cấp phát sách </td>
								<td>
									<span class="activity-item"><%= activities[i].book.title %></span>
									<span>đã được cấp phát</span>
								</td>
								<td> <%= activities[i].activityTime.toLocaleString("vi-VN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
								
							<% } else if(activities[i].category == "return") { %>
								<th scope="row"> <%= i+1 %> </th>
								<td> Trả sách </td>
								<td>
									<span class="activity-item"><%= activities[i].book.title %></span>
									<span>đã được trả lại</span>
								</td>
								<td> <%= activities[i].activityTime.toLocaleString("vi-VN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
								
							<% } else if(activities[i].category == "addBook") { %>
								<th scope="row"> <%= i+1 %> </th>
								<td> Thêm sách </td>
								<td>
									<span>Đã thêm sách</span>
									<span class="activity-item"><%= activities[i].book.title %></span>
								</td>
								<td> <%= activities[i].activityTime.toLocaleString("vi-VN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
								
							<% } else if(activities[i].category == "updateBook") { %>
								<th scope="row"> <%= i+1 %> </th>
								<td> Cập nhật sách </td>
								<td>
									<span>Đã cập nhật sách</span>
									<span class="activity-item"><%= activities[i].book.title %></span>
								</td>
								<td> <%= activities[i].activityTime.toLocaleString("vi-VN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
								
							<% } else if(activities[i].category == "updateStudentProfile") { %>
								<th scope="row"> <%= i+1 %> </th>
								<td> Cập nhật hồ sơ sinh viên </td>
								<td>
									<span>Bạn đã cập nhật hồ sơ của mình</span>
								</td>
								<td> <%= activities[i].activityTime.toLocaleString("vi-VN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
							<% } %>
							
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
		
	</div>
	
</main>