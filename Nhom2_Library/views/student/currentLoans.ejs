<main>
	<%- include('../partials/studentSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white p-3">
			<h5 class="m-0 fw-bold color-theme">Sách hiện tại của tôi</h5>
		</div>
		
		<div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
			<table class="table table-info table-striped table-hover m-0 bg-white">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Tiêu đề sách</th>
						<th scope="col">Tác giả sách</th>
						<th scope="col">Thời gian mượn</th>
						<th scope="col">Hạn trả</th>
						<th scope="col">Trạng thái</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i<currentLoans.length; i++) { %>
						<tr>
							<th scope="row"> <%= i+1 %> </th>
							<td> <%= currentLoans[i].book.title %> </td>
							<td> <%= currentLoans[i].book.authors %> </td>
							<td> <%= currentLoans[i].issueTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
							<td> <%= currentLoans[i].dueTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
							<td class="fw-bold text-<%= currentLoans[i].status %>"> <%= currentLoans[i].status %> </td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
</main>