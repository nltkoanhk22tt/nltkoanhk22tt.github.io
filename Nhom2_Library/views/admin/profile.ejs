<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		<form action="/admin/profile?_method=PUT" method="POST" class="w-75 border m-auto my-5 bg-white rounded-2">
			<h5 class="text-center bg-primary text-white form-title">Hồ sơ</h5>
			
			<div class="form-body p-4">
				<div class="mb-4">
					<label for="first-name" class="form-label">Tên</label>
					<input type="text" name="admin[firstName]" class="form-control" id="first-name" placeholder="Nhập tên.." value="<%= currentUser.firstName %>" required>
				</div>
				
				<div class="mb-4">
					<label for="last-name" class="form-label">Họ</label>
					<input type="text" name="admin[lastName]" class="form-control" id="last-name" placeholder="Nhập họ.." value="<%= currentUser.lastName %>" required>
				</div>
				
				<div class="mb-4">
					<label for="email" class="form-label">Email</label>
					<input type="email" id="email" class="form-control" value="<%= currentUser.email %>" disabled>
				</div>
				
				<div class="mb-4">
					<span class="d-inline-block me-2">Giới tính:</span>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="admin[gender]" id="male" value="male" <% if(currentUser.gender=='male'){%> checked <%}%> >
						<label class="form-check-label" for="male">Nam</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="admin[gender]" id="female" value="female" <% if(currentUser.gender=='female'){%> checked <%}%> >
						<label class="form-check-label" for="female">Nữ</label>
					</div>
				</div>
				
				<div class="mb-4">
					<label for="address" class="form-label">Địa chỉ</label>
					<input type="text" name="admin[address]" class="form-control" id="address" placeholder="Nhập địa chỉ.." value="<%= currentUser.address %>">
				</div>
				
				<div class="mb-4">
					<label for="phone" class="form-label">Số điện thoại</label>
					<input type="number" name="admin[phone]" class="form-control" id="phone" placeholder="Nhập số điện thoại.." value="<%= currentUser.phone %>">
				</div>
				
				<button type="submit" class="btn w-75 d-block m-auto mt-4">Cập nhật</button>
			</div>
		</form>
	</div>
	
	
</main>