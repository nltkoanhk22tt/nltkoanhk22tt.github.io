<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		<form action="/admin/books/add" method="POST" class="w-75 border m-auto my-5 bg-white rounded-2">
			<h5 class="text-center bg-primary text-white form-title">Thêm Sách</h5>
			
			<div class="form-body p-4">
				<div class="mb-3">
					<label for="title" class="form-label">Tiêu đề sách</label>
					<input type="text" name="book[title]" class="form-control" id="title" placeholder="Nhập tiêu đề sách.." required>
				</div>
				<div class="mb-3">
					<label for="ISBN" class="form-label">ISBN</label>
					<input type="number" name="book[ISBN]" class="form-control" id="ISBN" placeholder="Nhập ISBN sách.." required>
				</div>
				<div class="mb-3">
					<label for="description" class="form-label">Mô tả</label>
					<textarea name="book[description]" class="form-control" id="description" rows="5" placeholder="Nhập mô tả sách.."></textarea>
				</div>
				<div class="mb-3">
					<label for="authors" class="form-label">Tác giả sách</label>
					<input type="text" name="book[authors]" class="form-control" id="authors" placeholder="Nhập tác giả..">
				</div>
				<div class="mb-3">
					<label for="category" class="form-label">Danh mục sách</label>
					<input type="text" name="book[category]" class="form-control" id="category" placeholder="Nhập danh mục..">
				</div>
				<div class="mb-3">
					<label for="copies" class="form-label">Số lượng sách</label>
					<input type="number" min="0" name="book[copiesOwned]" class="form-control" id="copies" placeholder="Nhập số lượng sách.." required>
				</div>
				<button type="submit" class="btn w-75 d-block m-auto mt-4">Xác nhận</button>
				<a href="/admin/books" class="btn btn-cancel w-75 d-block m-auto mt-4">Hủy bỏ</a>
			</div>
		</form>
	</div>
	
</main>