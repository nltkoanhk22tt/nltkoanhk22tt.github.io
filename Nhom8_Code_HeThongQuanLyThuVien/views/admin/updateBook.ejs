<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		<form action="/admin/book/<%= book.id %>?_method=PUT" method="POST" class="w-75 border m-auto my-5 bg-white rounded-2">
			<h5 class="text-center bg-primary text-white form-title">Cập nhật sách</h5>
			
			<div class="form-body p-4">
				<div class="mb-3">
					<label for="title" class="form-label">Tiêu đề sách</label>
					<input type="text" name="book[title]" class="form-control" id="title" placeholder="Nhập tiêu đề sách.." value="<%= book.title %>" required>
				</div>
				<div class="mb-3">
					<label for="ISBN" class="form-label">ISBN</label>
					<input type="number" name="book[ISBN]" class="form-control" id="ISBN" placeholder="Nhập ISBN của sách.." value="<%= book.ISBN %>" required>
				</div>
				<div class="mb-3">
					<label for="description" class="form-label">Mô tả</label>
					<textarea name="book[description]" class="form-control" id="description" rows="5" placeholder="Nhập mô tả sách.."><%= book.description %></textarea>
				</div>
				<div class="mb-3">
					<label for="authors" class="form-label">Tác giả sách</label>
					<input type="text" name="book[authors]" class="form-control" id="authors" placeholder="Nhập tên tác giả(s).." value="<%= book.authors %>">
				</div>
				<div class="mb-3">
					<label for="category" class="form-label">Danh mục sách</label>
					<input type="text" name="book[category]" class="form-control" id="category" placeholder="Nhập danh mục.." value="<%= book.category %>">
				</div>
				<div class="mb-3">
					<label for="copies" class="form-label">Số lượng sách</label>
					<input type="number" min="0" name="book[copiesOwned]" class="form-control" id="copies" placeholder="Nhập số lượng sách.." value="<%= book.copiesOwned %>" required>
				</div>
				<button type="submit" class="btn w-75 d-block m-auto mt-4">Cập nhật</button>
				<a href="/admin/books" class="btn btn-cancel w-75 d-block m-auto mt-4">Hủy</a>
			</div>
		</form>
	</div>

</main>